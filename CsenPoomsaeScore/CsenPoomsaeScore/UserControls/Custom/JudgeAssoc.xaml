<UserControl x:Class="CsenPoomsaeScore.UserControls.Custom.JudgeAssoc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CsenPoomsaeScore.UserControls.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="TxblTitle" Text="Giudice 1" Style="{StaticResource TextBlockStyle}"></TextBlock>
            <TextBlock x:Name="TxblInfo" Text="[in attesa]" Style="{StaticResource TextBlockStyle}"></TextBlock>
        </StackPanel>

        <TextBlock x:Name="TxblMessage" Text="Vai nell'applicazione android, sulla schermata di impostazioni. Inserisci l'indirizzo di questa macchina e premi il tasto connetti." TextWrapping="Wrap" FontSize="12" Style="{StaticResource TextBlockStyle}"></TextBlock>
    </StackPanel>
</UserControl>
